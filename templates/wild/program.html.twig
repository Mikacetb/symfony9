{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ program.title }}</h1>
    <h2>
        Liste des saisons :
    </h2>
    <ul>
    {% for season in seasons %}
        <li>
            <a href="{{ path('show_season', {seasonId: season.id}) }}">Saison {{ season.number }}</a>
            <p>{{ season.year }} - {{ season.description }}</p>
        </li>
    {% endfor %}
    </ul>
        <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path('show_actor', {id: actor.id}) }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul> 
{% endblock %}
